// Draw board_3 
void drawboard_3() {
    printf("\n");
    for (int i = 0; i < 3; i++) {
        printf(" %c | %c | %c ", board_3[i][0], board_3[i][1], board_3[i][2]);
        if (i < 2) {
            printf("\n---|---|---\n");
        }
    }
    printf("\n\n");
}
    

// Draw board_4 
void drawboard_4() {
    printf("\n");
    for (int i = 0; i < 4; i++) {
        printf(" %s | %s | %s | %s ", board_4[i][0], board_4[i][1], board_4[i][2], board_4[i][3]);
        if (i < 3) {
            printf("\n----|----|----|----\n");
        }
    }
    printf("\n\n");
}


