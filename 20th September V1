    for (int i = 0; i < 10; i++) {
        printf("  %s  |  %s  |  %s  |  %s  |  %s  |  %s  |  %s  |  %s  |  %s  |  %s  ", board_10[i][0], board_10[i][1], board_10[i][2], board_10[i][3], board_10[i][4], board_10[i][5], board_10[i][6], board_10[i][7], board_10[i][8], board_10[i][9]);
