#include <stdio.h>
#include <string.h>
void boardSize(); // get the input( Board Size ) and after run the game
void drawboard_3();
void drawboard_4();
void drawboard_5();
void drawboard_6();
void drawboard_7();
void drawboard_8();
void drawboard_9();
void drawboard_10();

int main(){
    
    int mode;
    printf("Select the Mode\n"); // Select the Mode
    printf("1. Two Player\n2. Computer vs Player\n3. Multy Player\n");
    scanf("%d", &mode);
    if(mode >= 1 && mode <= 3){

        switch(mode){

           case 1: 
                boardSize();
           break;
           case 2:
                boardSize();
           
           break;
           case 3:
                boardSize();

           break;   
        }

    }
    else{
        printf("Invalid Input");
    }
    
    

    return 0;
}

void boardSize(){
    int boardSize;
    int x;
    printf("Board Size (3<= Board Size <= 10)");
    printf("Select Board Size:");
    scanf("%d", &boardSize);

    x = boardSize - 2;

    if(boardSize >= 3 && boardSize <= 10){

        switch (x){

            case 1:
            drawboard_3();
        
        break;
            case 2:
            drawboard_4();
        
        break;
            case 3:
            drawboard_5();
        
        break;
            case 4:
            drawboard_6();
        
        break;
            case 5:
            drawboard_7();
        
        break;
            case 6:
            drawboard_8();
        
        break;
            case 7:
            drawboard_9();
        
        break;
            case 8:
            drawboard_10();

            break;

        }

    }
    else{
        printf("Invalid Input");
    }
    
}

